{
  "name": "juquinha",
  "version": "0.0.1",
  "description": "Tudo na mÃ£ozinha",
  "type": "module",
  "keywords": [
    "framework",
    "serverless",
    "cloud",
    "aws",
    "amazon",
    "dynamodb",
    "dynamo",
    "s3",
    "pnpm",
    "opinionated",
    "autoconfig",
    "zero-config",
    "multiplatfom",
    "termux"
  ],
  "scripts": {
    "setup": "npx pnpm run bootstrap && npx cross-env INIT=true node scripts/setup/index.mjs",
    "bootstrap": "npx pnpm recursive install",
    "clean": "rm -rf node_modules && npx pnpm -r exec -- rm -rf node_modules && npx pnpm -r exec -- rm -rf .serverless",
    "build": "pnpm -r --filter sls-* exec -- sls package",
    "build:api": "pnpm -r --filter sls-api-* exec -- sls package",
    "build:resources": "pnpm -r --filter sls-resources-* exec -- sls package",
    "build:resources:api": "pnpm -r --filter sls-resources-api exec -- sls package",
    "build:web": "pnpm -r --filter sls-web exec -- pnpm run build",
    "deploy": "pnpm -r --filter sls-* exec -- sls deploy",
    "deploy:fresh": "pnpm run clean && pnpm run bootstrap && pnpm run deploy",
    "deploy:api": "pnpm -r --filter sls-api-* exec -- sls deploy",
    "deploy:resources": "pnpm -r --filter sls-resources-* exec -- sls deploy",
    "deploy:resources:api": "pnpm -r --filter sls-resources-api exec -- sls deploy",
    "deploy:web": "pnpm -r --filter sls-web exec -- sls deploy",
    "remove": "pnpm run remove:api && pnpm run remove:resources && pnpm run remove:web",
    "remove:api": "pnpm -r --filter sls-api-* exec -- sls remove",
    "remove:resources:api": "pnpm -r --filter sls-resources-api exec -- sls remove",
    "remove:resources": "pnpm -r --filter sls-resources-* exec -- sls remove",
    "remove:web": "pnpm -r --filter sls-web exec -- sls remove",
    "docker:build": "docker build . -t juquinha:latest",
    "docker:run": "docker run --rm juquinha:latest",
    "docker:deploy": "docker run --rm juquinha:latest pnpm run deploy",
    "web:dev": "(cd modules/web && pnpm run dev)",
    "test": "node scripts/test/index.mjs",
    "test:unit": "npx cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs \"^(.*/)*(.*\\.)*(unit)\\.(spec)\\.((m|c)?js|ts)$\"",
    "test:integration": "npx cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.mjs \"^(.*/)*(.*\\.)*(integration)\\.(spec)\\.((m|c)?js|ts)$\"",
    "lint": "eslint --ext .js,.mjs,.cjs .",
    "lint:web": "echo FIXME && exit 0; (cd modules/web && pnpm run lint:js)",
    "lint:web:fix": "(cd modules/web && pnpm run lint:js -- --fix)",
    "lint:fix": "eslint --ext .js,.mjs,.cjs --fix . && pnpm run lint:web:fix"
  },
  "dependencies": {
    "@juquinha/config": "workspace:config",
    "@juquinha/lib": "workspace:lib"
  },
  "devDependencies": {
    "@actions/core": "^1.9.0",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@rodrigogs/serverless": "3.21.0-patched",
    "@rodrigogs/serverless-finch": "^3.0.0",
    "chalk": "^5.0.1",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "faker": "^5.5.3",
    "inquirer": "^9.0.2",
    "jest": "^28.1.3",
    "loading-cli": "^1.1.0",
    "pnpm": "^7.6.0",
    "serverless-bundle": "^4.4.0",
    "serverless-offline": "^9.0.0",
    "serverless-scriptable-plugin": "^1.2.2",
    "strip-ansi": "^7"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  }
}
