{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "cwd": "${workspaceFolder}",
            "args": [
                "--runInBand",
                "--watchAll=false",
                "--config", 
                "jest.config.mjs"
            ],
            "env": {
                "STAGE": "test",
                "NODE_OPTIONS": "--experimental-vm-modules"
            }
        }
    ]
}